// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

//*******************************************
//* goldBook Table
//*******************************************
model goldBook {
  id      Int    @id @default(autoincrement())
  name    String
  message String
}

//*******************************************
//* admin Table
//*******************************************
model admin {
  id     Int      @id @default(autoincrement())
  role   String   @unique
  family family[]
}

//*******************************************
//* realState Table
//*******************************************
model realEstate {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  imageName   String
  description String
  longitude   Float
  latitude    Float
  isActif     Boolean  @default(true)
  isVisitable Boolean  @default(true)
  maxVisite   Int      @default(30)
  visit       visit[]
  family      family[]
}

//*******************************************
//* visit Table
//*******************************************
model visit {
  id           Int         @id @default(autoincrement())
  firstname    String
  quantity     Int
  date         DateTime
  hour         String
  realEstate   realEstate? @relation(fields: [realEstateId], references: [id])
  realEstateId Int?
}

//*******************************************
//* family Table
//*******************************************
model family {
  id           Int         @id @default(autoincrement())
  firstname    String
  lastname     String
  imageName    String?
  description  String?
  isActif      Boolean     @default(true)
  login        String      @unique
  password     String?
  kingdomRole  String
  realEstate   realEstate? @relation(fields: [realEstateId], references: [id])
  realEstateId Int?
  admin        admin?      @relation(fields: [adminId], references: [id])
  adminId      Int?
}
